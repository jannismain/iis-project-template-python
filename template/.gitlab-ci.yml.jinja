image: python:latest
stages: [test, publish]

test:
  stage: test
  cache: # reuse venv in subsequent jobs
    key: $CI_JOB_NAME
    paths:
      - .cache/pip
      - env/
  before_script:
    - python -m venv env
    - source env/bin/activate
  script:
    - pip install .[test]
    - pytest --doctest-modules --cov --cov-config=pyproject.toml --cov-branch --cov-report term --cov-report html:build/coverage
    - coverage report
    - pip install anybadge==1.9.0
    - mkdir -p build/badges
    - pip install radon==5.1.0
    - make maintainability
    - python -m anybadge --label=Maintainability --value="$(python -m radon cc --total-average -nc src | tail -n 1 | cut -d' ' -f 3) ($(python -m radon cc --total-average -nc src | tail -n 1 | cut -d' ' -f 4 | cut -c 2-4))" -f build/badges/maintainability -o
    - python -m anybadge --label=Documentation --value="v$(python -m {{package_name}} --version)" --color "blue" -f build/badges/documentation -o
  coverage: '/TOTAL.+?(\d+\%)/'
  artifacts:
    paths:
      - build/coverage
      - build/badges
      - env/

pages:
  stage: publish
  needs:
    - test
  only:
    - main
    - staging
  script:
    - mkdir -p public
    - source env/bin/activate
    - pip install .[doc]
    - DOCS_TARGET=public make docs
    - mv build/badges public/.
    - mv build/coverage public/.
  artifacts:
    paths:
      - public
